<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="myrobot"> 

  <xacro:include filename="$(find robot_description_pkg)/urdf/material.xacro"/>
  <xacro:include filename="$(find robot_description_pkg)/urdf/plugin.gazebo"/>
  
 <link name="odom">
  </link>

  <link name="base_link">
  </link>
   <joint name="joint_base" type="fixed">
        <parent link="odom"/>
        <child link="base_link"/>
  </joint>
 

  <!-- CHASSIS LINK -->
  <link name="chassis">
        <inertial>
            <origin xyz="0.0 0.0 0.0"/>
            <mass value="20"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.2" />
            <geometry>
                <box size="0.6 0.45 0.15"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.2" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.6 0.45 0.15"/>
            </geometry>
        </collision>
  </link>
  <joint name="joint_chassis" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
  </joint>
 

  <!-- FRONT RIGHT WHEEL LINK   -->
  <link name="front_left_wheel">    
    <inertial>
      <origin rpy="0 0 0 " xyz="0 0 0"/>
      <mass value="0.7"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    
    <collision name="front_left_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.04" radius="0.1"/>
      </geometry>
    </collision>
    
    <visual name="front_left_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
      <material name="Black"/>      
    </visual>
    
  </link>
  <joint name="joint_front_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0.175 0.25 0.1"/>
    <child link="front_left_wheel" />
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint>  

  <!-- BACk RIGHT WHEEL LINK    -->
  <link name="back_left_wheel">    
    <inertial>
      <mass value="0.7"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    
    <collision name="back_left_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.04" radius="0.1"/>
      </geometry>
    </collision>
    
    <visual name="back_left_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>  
      <material name="Black"/>    
    </visual>   
  </link> 
  <joint name="joint_back_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.175 0.25 0.1"/>
    <child link="back_left_wheel" />
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint> 


  <!-- FRONT LEFTT WHEEL LINK   -->
  <link name="front_right_wheel">    
    <inertial>
      <mass value="0.7"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    
    <collision name="front_right_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>
    </collision>
    
    <visual name="front_right_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>   
      <material name="Black"/>   
    </visual>
    
  </link>
  <joint name="joint_front_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0.175 -0.25 0.10"/>
    <child link="front_right_wheel" />
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint>   

<!-- BACk RIGHT WHEEL LINK    -->
  <link name="back_right_wheel">    
    <inertial>
      <mass value="0.7"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    
    <collision name="back_right_wheel_collision">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0" />
      <geometry>
        <cylinder length="0.04" radius="0.1"/>
      </geometry>
    </collision>
    
    <visual name="back_right_wheel_visual">
      <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.05" radius="0.1"/>
      </geometry>  
      <material name="Black"/>    
    </visual>   
  </link> 
  <joint name="joint_back_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.175 -0.25 0.10"/>
    <child link="back_right_wheel" />
    <parent link="chassis"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
  </joint> 



    <!-- CAMERA LINK -->
    <link name="camera">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.9"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual >
            <origin xyz="0.325 0.0 0.2" rpy="0 0 0"/>
            <geometry>
                <box size="0.050 0.20 0.07"/>
            </geometry>
            <material name="Blue"/>
        </visual>
        <collision>
           <origin xyz="0.325 0.0 0.2" rpy="0 0 0"/>
            <geometry>
                <box size="0.050 0.20 0.07"/>
            </geometry>
        </collision>
    </link>

    <joint name="camera_link_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis"/>
        <child link="camera"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>
   
   
   
    <!-- LIDAR LINK -->
    <link name="lider">
    <inertial>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <mass value="0.9"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
        <origin xyz=" 0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://robot_description_pkg/meshes/hokuyo.dae"/>       
        </geometry>
    </visual>
  
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <mesh filename="package://robot_description_pkg/meshes/hokuyo.dae" />
        </geometry>  
    </collision>
    </link>
  
    <joint name="lider_joint" type="fixed">
        <origin xyz="0.0 0.0 0.304" rpy="0 0 0"/>
        <parent link="chassis"/>
        <child link="lider"/>
        <axis xyz="0 0 0" />
    </joint>

</robot>
